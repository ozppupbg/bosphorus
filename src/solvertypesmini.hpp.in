class GenericClause
{
   public:
    size_t size() const;

    bool empty() const;

    template <class T>
    std::vector<T> getClause() const;

    friend std::ostream& operator<<(std::ostream& os, const GenericClause& cl);
};

class Clause: public GenericClause
{
   public:
    Clause(const vector<Lit>& _lits) : lits(_lits)
    {
    }

    const vector<Lit>& getLits() const
    {
        return lits;
    }

    size_t size() const
    {
        return lits.size();
    }

    bool empty() const
    {
        return lits.empty();
    }

    std::vector<Lit> getClause() const
    {
        assert(!lits.empty());
        return lits;
    }

    friend std::ostream& operator<<(std::ostream& os, const Clause& cl);

    vector<Lit> lits;
};

struct VarMap
{
    enum {cnf_var, anf_repl, must_set, fixed} type;
    uint32_t other_var;
    bool inv;
    bool value;
};

inline std::ostream& operator<<(std::ostream& os, const Clause& cl)
{
    for (vector<Lit>::const_iterator it = cl.lits.begin(), end = cl.lits.end();
         it != end; it++) {
        os << *it << " ";
    }
    os << "0";

    return os;
}

inline std::ostream& operator<<(std::ostream& os, const vector<Clause>& clauses)
{
    for (const auto& it: clauses) {
        os << it << std::endl;
    }
    return os;
}

inline std::ostream& operator<<(std::ostream& os, const vector<GenericClause>& clauses)
{
    for (const auto& it: clauses) {
        os << it << std::endl;
    }
    return os;
}

